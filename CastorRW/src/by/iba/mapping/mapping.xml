<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE mapping PUBLIC "-//EXOLAB/Castor Mapping DTD Version 1.0//EN" 
"http://castor.org/mapping.dtd">

<mapping>
	<class name="by.iba.entity.Person">
		<map-to xml="person"/>
		<field name="name" type="string">
			<bind-xml name="name" node="attribute"/>
		</field>
		<field name="address" type="string">
			<bind-xml name="address" node="attribute"/>
		</field>
		<field name="email" type="string">
			<bind-xml name="email" node="attribute" />
		</field>
		<field name="phone" type="string">
			<bind-xml name="phone" node="attribute"/>
		</field>
	</class>
</mapping>